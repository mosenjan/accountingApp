<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
    </style>

    <!--for name of each user in article-->
    <style name="listItemName">
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineSpacingExtra">4.7sp</item>
        <item name="android:textColor">@color/black3</item>
    </style>

    <!--for when create post in article-->
    <style name="listItemCreationDay">
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/black3</item>
    </style>

    <!--body of Items in listView-->
    <style name="listItemBody">
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:lineSpacingExtra">6.7sp</item>
        <item name="android:textColor">@color/black3</item>
    </style>

</resources>